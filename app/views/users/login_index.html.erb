<div id="wrapper">
  <h1>Login</h1>
  <p id="notice"><%= notice %></p>
  <div id="contact_form">
    <%= form_tag(:controller => "users", :action => "login", :method => "post") do %>
 
      <ul class="form">
        <li class="field">
          <%= label_tag :email %><br />
          <%= text_field_tag :email %>
        </li>

        <li class="field">
          <%= label_tag :password %><br />
          <%= password_field_tag :password %>
        </li>

        <li class="actions">
          <%= submit_tag( t('user.login'), :class => "submit") %>
        </li>
      </ul>
    <% end %>
  </div>
</div>
