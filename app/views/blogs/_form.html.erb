<div id="other_form">
  <%= form_for(@blog) do |f| %>
    <% if @blog.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>
        <ul>
          <% @blog.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :topic %><br />
      <%= select("blog", "topic_id", @topics.collect {|t| [ t.name, t.id ] }, {:include_blank => false}) %> <%= link_to 'Admin topics', topics_path %>
    </div>
    <div class="field">
      <%= f.label :name %> <p style="width: 650px">* Este campo es un identificador y ha de ser único y escribirse sin espacios ni caracteres extraños.</p>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :image_path %><br />
      <%= f.file_field :image_path %><br />
    </div>
    <div class="field">
      <%= f.label :ext_url %><br />
      <%= f.text_field :ext_url %>
    </div>
    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :short_desc %><br />
      <%= f.text_field :short_desc %>
    </div>
    <div class="field">
      <%= f.label :long_desc %><br />
      <%= f.text_area :long_desc %>
    </div>
    <div class="field">
      <p style="width: 650px">Algunos ejemplos html:<br />
      Parrafo: &lt;p&gt;texto que sea&lt;/p&gt;<br />
      Parrafo negrita: &lt;p style="font-weight:bold"&gt;texto que sea&lt;/p&gt;<br />
      Parrafo cursiva: &lt;p style="font-style:italic"&gt;texto que sea&lt;/p&gt;<br />
      Parrafo con otro tamaños de letra: &lt;p style="fontsize:20px"&gt;texto que sea&lt;/p&gt;<br />
      Parrafo con un enlace: &lt;p&gt;&lt;a href="http://softlutions.es" target="_blank"&gt;www.softlutions.es&lt/a&gt&lt;/p&gt;<br />
      Parrafo con una imagen: &lt;p&gt;Texto que sea&lt;img src="http://flickr.com/98459" /&gt;Texto que sea&lt;/p&gt;<br /></p>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>